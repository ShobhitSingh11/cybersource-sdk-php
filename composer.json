{
  "name": "cybersource/sdk-php",
  "description": "CyberSource PHP SOAP client",
  "keywords": [
    "cybersource",
    "payments",
    "api"
  ],
  "homepage": "https://github.com/CyberSource/cybersource-sdk-php",
  "license": "Proprietary",
  "authors": [
    {
      "name": "CyberSource",
      "homepage": "https://github.com/CyberSource"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-curl": "*",
    "ext-openssl": "*",
    "ext-soap": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "classmap": ["lib/"]
  },
  "scripts": {
      "test": "vendor/bin/phpunit --log-junit build/phpunit/test_report.xml && vendor/bin/phpunit",
      "coverage": "php -dxdebug.mode=coverage ./vendor/bin/phpunit --coverage-text",
      "lint:phpcs-pr": "git diff --name-only $COMMIT_BEFORE..$COMMIT_AFTER | grep \\.php$ | xargs -I{} ./vendor/bin/phpcs --standard=PSR2 {}",
      "lint:phpcs": "./vendor/bin/phpcs --standard=PSR2",
      "lint":[
        "@lint:phpcs-pr",
        "@lint:phpcs"
      ]

  },
  "include-path": ["lib/conf/"]
}
